<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zzsr.my_ads_plugin"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 1. 强制覆盖库版本限制 (关键) -->
    <uses-sdk tools:overrideLibrary="xyz.adscope.amps,
    xyz.adscope.ad,xyz.adscope.amps.adapter.asnp,
    com.beizi.ad,com.beizi.fusion,xyz.adscope.amps.adapter.bz,
    com.qq.e,xyz.adscope.amps.adapter.gdt,
    com.kwad.sdk,xyz.adscope.amps.adapter.ks,
    com.bytedance.pangle,xyz.adscope.amps.adapter.csj,xyz.adscope.amps.adapter.gm,
    com.baidu.mobads.proxy,xyz.adscope.amps.adapter.bd,
    com.sigmob.sdk,com.czhj.sdk.common,xyz.adscope.amps.adapter.sigmob,
    com.qumeng.advlib,xyz.adscope.amps.adapter.qm,
    com.jd.ad.sdk.multi,xyz.adscope.amps.adapter.jd,
    com.huawei.hms.ads,xyz.adscope.amps.adapter.hw,
    xyz.adscope.common.v2" />

    <!-- 2. 权限声明 (全部保留) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 穿山甲特殊权限 -->
    <permission
        android:name="${applicationId}.openadsdk.permission.TT_PANGOLIN"
        android:protectionLevel="signature" />
    <uses-permission android:name="${applicationId}.openadsdk.permission.TT_PANGOLIN" />

    <application>
        <!-- 3. FileProvider 配置 (全部保留) -->

        <!-- BeiZiSDK -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/beizi_file_path" />
        </provider>

        <!-- ASNPSDK -->
        <provider
            android:name="xyz.adscope.ad.publish.provider.ASNPFileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/asnp_file_paths" />
        </provider>

        <!-- 广点通 -->
        <provider
            android:name="com.qq.e.comm.GDTFileProvider"
            android:authorities="${applicationId}.gdt.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/gdt_file_path" />
        </provider>

        <!-- 穿山甲 -->
        <provider
            android:name="com.bytedance.sdk.openadsdk.TTFileProvider"
            android:authorities="${applicationId}.TTFileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/pangle_file_paths" />
        </provider>

        <provider
            android:name="com.bytedance.sdk.openadsdk.multipro.TTMultiProvider"
            android:authorities="${applicationId}.TTMultiProvider"
            android:exported="false" />

    </application>
</manifest>